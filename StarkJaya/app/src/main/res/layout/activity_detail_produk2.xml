<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduk2">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="425dp"
        android:layout_height="380dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/velg_vrossi" />

    <ImageView
        android:id="@+id/imgketerangan2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back_color"
        android:backgroundTint="#C4C4C4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text='Velg Vrossi Copy RCB Palang 8 Warna Putih Ring 14 (MIO/BEAT/SCOPY/VARIO/NMAX/AEROX/PCX) - UNIVERSAL MATIC "OBAT GANTENG" HEDON'
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imgketerangan2"
        app:layout_constraintStart_toStartOf="@+id/imgketerangan2"
        app:layout_constraintTop_toTopOf="@+id/imgketerangan2" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="Rp.850.00"
        android:textColor="#BA1616"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgketerangan2"
        app:layout_constraintStart_toStartOf="@+id/imgketerangan2"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <ImageView
        android:id="@+id/imgbeli"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/back_color"
        android:backgroundTint="#C4C4C4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <Button
        android:id="@+id/button"
        android:layout_width="214dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Beli"
        app:backgroundTint="#AF1010"
        app:layout_constraintBottom_toBottomOf="@+id/imgbeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgbeli" />

</androidx.constraintlayout.widget.ConstraintLayout>